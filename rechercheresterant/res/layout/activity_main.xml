<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amira.rechercheresterant.MainActivity"
    android:background="@drawable/back1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/liste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/cast_expanded_controller_seek_bar_progress_background_tint_color"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Liste"
                    android:textAlignment="center"
                    android:textColor="@color/wallet_link_text_light"
                    android:textColorHighlight="@color/cast_intro_overlay_background_color"
                    android:textColorHint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="56sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="160dip"
                        android:layout_height="160dip"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sandwich" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="160dip"
                        android:layout_height="160dip"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/pizza" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="160dip"
                        android:layout_height="160dip"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/spaghetti" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="160dip"
                        android:layout_height="160dip"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/salad" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
